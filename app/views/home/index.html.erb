<div class="jumbotron" style="text-align:center;background-color:#fff">

  <% if Setting.get(:banner).boolean %>
    <div class="well">
      <%= Setting.get(:banner).content.html_safe %>
    </div>
  <% end %>

  <h1><%= Setting.get(:name).content %></h1>
  <p>Chose your adventure...</p>
  <div class="row">
    <div class="col-md-4">
      <%= link_to image_tag('icon_5198.svg', width: '100%'), shows_path %>
    </div>
    <div class="col-md-4">
      <%= link_to image_tag('icon_1895.svg', width: '100%'), movies_path %>
    </div>
    <div class="col-md-4">
      <%= link_to image_tag('icon_2013.svg', width: '100%'), music_index_path  %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h2>Television</h2>
      <%= form_tag(shows_search_path, role: 'search') do %>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Television" name="q">
      </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <h2>Films</h2>
      <%= form_tag(movies_search_path, role: 'search') do %>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Films" name="q">
      </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <h2>Music</h2>
      <%= form_tag('', role: 'search') do %>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Music" name="q">
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= link_to image_tag('icon_book.svg', width: '100%'), books_path  %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Books</h2>
      <%= form_tag('', role: 'search') do %>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search Music" name="q" disabled>
      </div>
      <% end %>
    </div>
  </div>
</div>
